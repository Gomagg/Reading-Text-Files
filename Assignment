#Answer
def read_file_content(filename):
	with open(filename) as f:
		contents= f.read()
		contents= contents.split("./story.txt")
		return contents
		
def count_words(path):
	text= read_file_content(path)
	bag= {}
	for value in text:
		if (len(value)) != 0:
			value = value.strip()
			value = value.strip("? \n ., ")
			if value in bag.keys():
				bag[value] +=1
			else:
				bag[value] = 1
	return(bag)
print(count_words("./story.txt"))
